version: '3.8'
services:
  nuxt-app:
    build:
      context: .
      target: build # Usa apenas o primeiro estágio para desenvolvimento
    ports:
      - "3000:3000"
    volumes:
      - .:/app
      - /app/node_modules # Evita sobrescrever os módulos do container com os do host
    environment:
      - NODE_ENV=development
    command: npm run dev
